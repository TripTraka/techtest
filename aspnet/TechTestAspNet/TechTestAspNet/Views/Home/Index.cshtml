@model List<TechTestAspNet.Models.Cruise>

@{
    ViewData["Title"] = "Cruise List";
}

<h1>Cruise List</h1>

<form method="get" asp-controller="Home" asp-action="Index" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" value="@ViewData["Search"]" class="form-control" placeholder="Search cruises...">
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["ErrorMessage"]
    </div>
}

@if (Model == null || !Model.Any())
{
    <p>No cruises found matching your search.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Trip Name</th>
                <th>Itinerary</th>
                <th>Start Date</th>
                <th>Embarkation Port</th>
                <th>Ship</th>
                <th>Inclusions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cruise in Model)
            {
                <tr>
                    <td>@cruise.TripName</td>
                    <td>@cruise.ItineraryName</td>
                    <td>@TechTestAspNet.Helpers.DateHelper.FormatDate(cruise.StartDate)</td>
                    <td>@cruise.EmbarkationPort</td>
                    <td>@cruise.Ship</td>
                    <td>
                        <ul>
                            @foreach (var inclusion in cruise.Inclusions.Split("\r\n", StringSplitOptions.RemoveEmptyEntries))
                            {
                                <li>@inclusion</li>
                            }
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
